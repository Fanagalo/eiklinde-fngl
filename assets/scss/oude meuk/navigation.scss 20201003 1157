/*--------------------------------------------------------------
## Menus
--------------------------------------------------------------*/

#site-navigation {
    background-color: var(--menu-bg);
    border: none;
    height: auto;
    margin: 0;
    a {
        color: var(--paragraph-color);
        text-decoration: none;
    }
    ul {
        list-style-type: none;
        padding: 0;
    }
    li:hover>a {
        // this declares the color of the menu text when a submenu is focused
        color: var(--paragraph-color);
    }
}


